<?xml version="1.0"?>
<DockWindow DataSource="{CurrentSolution}" Caption="Call Stack"  Width="60%">
	<Container RootDataLevel="true" DataSource="{DbgSession}">
		<ListBox Data="{Frames}" SelectedItem="{²CurrentFrame}">		
			<Template>
				<Scroller  Name="scroller1"  >
					<Table Columns="Level,Fit;Address,Fit;Function,Stretched;File,Fit;Line,Fit" 
						Height="Fit" Name="ItemsContainer" VerticalAlignment="Top"/>
				</Scroller>			
			</Template>
			<ItemTemplate>
				<TableRow Height="Fit" >
					<Label Text="{Level}" TextAlignment="Right" />
					<Label Text="{Address}" />
					<Label Text="{Function}" />	
					<Label Text="{File}" />
					<Label Text="{Line}" />	
				</TableRow>
			</ItemTemplate>
		</ListBox>
	</Container>
</DockWindow>
